%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal'}) do |f|
  = devise_error_messages!
  .field.form-group
    = f.label :first_name, class: 'control-label col-sm-2'
    .col-sm-6
      = f.text_field :first_name, autofocus: true, class: 'form-control'
  .field.form-group
    = f.label :last_name, class: 'control-label col-sm-2'
    .col-sm-6
      = f.text_field :last_name, class: 'form-control'
  .field.form-group
    = f.label :email, class: 'control-label col-sm-2'
    .col-sm-6
      = f.email_field :email, class: 'form-control'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field.form-group
    = f.label :password, class: 'control-label col-sm-2'
    %i (leave blank if you don't want to change it)
    .col-sm-6
      = f.password_field :password, autocomplete: "off", class: 'form-control'
  .field.form-group
    = f.label :password_confirmation, class: 'control-label col-sm-2'
    .col-sm-6
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
  .field.form-group
    = f.label :current_password, class: 'control-label col-sm-2'
    %i (we need your current password to confirm your changes)
    .col-sm-6
      = f.password_field :current_password, autocomplete: "off", class: 'form-control'
  .actions.form-group
    .col-sm-offset-2.col-sm-6
      = f.submit "Update", class: 'btn btn-primary btn-lg'

