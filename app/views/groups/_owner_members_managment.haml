- group.members.each do |member|
  .profile-header-container.col-xs-4.col-sm-4.col-md-4.col-lg-3
    .profile-header-img
      %img.media-object.img-responsive.img-circle{:alt => "User Pic", :src => asset_path(member.user.personal_photo.url(:thumb))}
      .rank-label-container
        .label.label-default.rank-label
          = member.user.first_name
          = member.user.last_name
    .profile-buttons
      - unless member.status == 'joined'
        = link_to accept_member_to_group_path(group.id, member.user_id), class: 'btn btn-success' do
          = fa_icon 'plus'
          %span.visible-md-inline.visible-lg-inline
            Accept
      - else
        = link_to decline_member_from_group_path(group.id, member.user_id), class: 'btn btn-danger' do
          = fa_icon 'ban'
          %span.visible-md-inline.visible-lg-inline
            Decline

