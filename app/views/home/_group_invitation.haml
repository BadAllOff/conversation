.row.user-row
  .col-xs-3.col-sm-2.col-md-1.col-lg-1
    - user_pic = [74, 75, 76].sample
    %img.img-responsive.img-circle{:alt => "User Pic", :src => asset_path("development/#{user_pic}.jpg")}/
  .col-xs-8.col-sm-9.col-md-10.col-lg-10
    %strong Cyruxx
    %br/
    %span.text-muted User level: Administrator
  .col-xs-1.col-sm-1.col-md-1.col-lg-1.dropdown-user{"data-for" => ".cyruxx#{i}"}
    %i.glyphicon.glyphicon-chevron-down.text-muted
.row.user-infos{class: "cyruxx#{i}"}
  .col-xs-12.col-sm-12.col-md-10.col-lg-10.col-xs-offset-0.col-sm-offset-0.col-md-offset-1.col-lg-offset-1
    .panel.panel-primary
      .panel-heading
        %h3.panel-title User information
      .panel-body
        .row
          .col-md-3.col-lg-3.hidden-xs.hidden-sm
            %img.img-responsive.img-circle{:alt => "User Pic", :src => asset_path("development/#{user_pic}.jpg")}/
          .col-xs-2.col-sm-2.hidden-md.hidden-lg
            %img.img-responsive.img-circle{:alt => "User Pic", :src => asset_path("development/#{user_pic}.jpg")}/
          .col-xs-10.col-sm-10.hidden-md.hidden-lg
            %strong Cyruxx
            %br/
            %dl
              %dt Date:
              %dd
                - t = Time.now
                = t.strftime("%F")
              %dt Starts at:
              %dd
                = t.strftime("%H:%M")
              %dt Ends at:
              %dd
                - t = (Time.now + 5400)
                = t.strftime("%H:%M")
              %dt Topics:
              %dd Economics, History, Living in England
              %dt Meeting point:
              %dd
                Big Ben
                = link_to '#' do
                  = fa_icon 'map-marker', class: 'fa-lg'
              %dt Members:
              %dd 10\15
          .col-md-9.col-lg-9.hidden-xs.hidden-sm
            %strong Cyruxx
            %br/
            %table.table.table-user-information
              %tbody
                %tr
                  %td Date:
                  %td
                    - t = Time.now
                    = t.strftime("%F")
                %tr
                  %td Starts at:
                  %td
                    = t.strftime("%H:%M")
                %tr
                  %td Ends at:
                  %td
                    - t = (Time.now + 5400)
                    = t.strftime("%H:%M")
                %tr
                  %td Topics:
                  %td Economics, History, Living in England
                %tr
                  %td Meeting point:
                  %td
                    Big Ben
                    = link_to '#' do
                      = fa_icon 'map-marker', class: 'fa-lg'
                %tr
                  %td Members
                  %td 10\15
      .panel-footer
        %button.btn.btn-sm.btn-default{"data-original-title" => "Send message to user", "data-toggle" => "tooltip", :type => "button"}
          = fa_icon "envelope-o"
        %button.btn.btn-sm.btn-default{"data-original-title" => "Cheers up!", "data-toggle" => "tooltip", :type => "button"}
          = fa_icon "thumbs-o-up"
        %span.pull-right
          %button.btn.btn-success{"data-original-title" => "Ask invitation", "data-toggle" => "tooltip", :type => "button"}
            = fa_icon 'plus'
            = fa_icon 'group'
            .span.hidden-xs
              Ask invitation
          %button.btn.btn-danger{"data-original-title" => "Leave group", "data-toggle" => "tooltip", :type => "button"}
            = fa_icon 'minus'
            = fa_icon 'group'
            .span.hidden-xs
              Leave group
        .clearfix