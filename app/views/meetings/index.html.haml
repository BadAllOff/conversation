%p#notice= notice
%h1 Listing Meetings
%table.table-hover.table-responsive.table-striped.table-bordered
  %thead
    %tr
      %th Title
      %th Topics
      %th Starts at
      %th Ends at
      %th Venue
      %th Max members
      %th{:colspan => "3"}
  %tbody
    - @meetings.each do |meeting|
      %tr
        %td= meeting.title
        %td= meeting.topics
        %td= meeting.starts_at
        %td= meeting.ends_at
        %td= meeting.venue
        %td= meeting.max_members
        %td= link_to 'Show', meeting, class: 'btn btn-default'
        %td= link_to 'Edit', edit_meeting_path(meeting), class: 'btn btn-default'
        %td= link_to 'Destroy', meeting, method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Meeting', new_meeting_path
