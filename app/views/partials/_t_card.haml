.panel.panel-default.panel-card
  .panel-heading
    %img{:src => asset_path("baloon.jpg")}/
    //%button.btn.visible-lg-block.visible-md-block.btn-primary.btn-xs{:role => "button"} Edit profile
    //%button.btn.visible-sm-block.visible-xs-block.btn-primary{:role => "button"} Edit profile
  .panel-figure
    = image_tag current_user.personal_photo.url(:thumb), class: 'img-responsive img-circle'
  .panel-body.text-center
    %h4.panel-header
      %a{:href => "https://twitter.com/ShamilBadalov"} @Username
    %small
      Hello
      = current_user.first_name
      = current_user.last_name + '!'
      See your badges below!
  .panel-thumbnails
    .row
      .col-xs-4
        .thumbnail
          %img{:src => asset_path("60x60.jpeg")}/
      .col-xs-4
        .thumbnail
          %img{:src => asset_path("60x60-1.jpeg")}/
      .col-xs-4
        .thumbnail
          %img{:src => asset_path("60x60-2.jpeg")}/
