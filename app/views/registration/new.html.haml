%h2 Sign up
%hr.colorgraph
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
  = devise_error_messages!
  .field.form-group
    = f.label :first_name, class: 'control-label col-sm-2'
    .col-sm-6
      = f.text_field :first_name, autofocus: true, class: 'form-control'
  .field.form-group
    = f.label :last_name, class: 'control-label col-sm-2'
    .col-sm-6
      = f.text_field :last_name, class: 'form-control'
  .field.form-group
    = f.label :email, class: 'control-label col-sm-2'
    .col-sm-6
      = f.email_field :email, class: 'form-control'
  .field.form-group
    = f.label :password, class: 'control-label col-sm-2'
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    .col-sm-6
      = f.password_field :password, autocomplete: "off", class: 'form-control'
  .field.form-group
    = f.label :password_confirmation, class: 'control-label col-sm-2'
    .col-sm-6
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
  .actions.form-group
    .col-sm-offset-2.col-sm-6
      = f.submit "Sign up", class: 'btn btn-primary btn-lg'
= render "devise/shared/links"
